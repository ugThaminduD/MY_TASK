<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/cbTodo"
        android:layout_width="23dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/top_background01"
        android:fontFamily="@font/amaranth_bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="normal|italic" />

    <TextView
        android:id="@+id/itemTaskName"
        android:layout_width="33dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:background="@drawable/top_background03"
        android:fontFamily="@font/amaranth_bold"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/item_task"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/ivEdit"
        android:layout_width="14dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/highlight"
        android:src="@drawable/edit_24" />


    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="14dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/accent"
        android:src="@drawable/delete_forever_24px" />

</LinearLayout>
